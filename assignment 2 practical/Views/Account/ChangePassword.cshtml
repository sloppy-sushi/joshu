@model AceJobAgency.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body p-4">
                <h2 class="card-title h4 mb-2">Change password</h2>
                <p class="text-muted small mb-3">Weâ€™ll send a verification code to your registered email. Use it below to set a new password.</p>
                @if (TempData["OtpSent"] != null)
                {
                    <div class="alert alert-success py-2 mb-3">@TempData["OtpSent"]</div>
                }
                @if (TempData["OtpError"] != null)
                {
                    <div class="alert alert-danger py-2 mb-3">@TempData["OtpError"]</div>
                }
                <form asp-action="SendChangePasswordOtp" method="post" class="mb-4">
                    <button type="submit" class="btn btn-outline-primary">Send verification code to my email</button>
                </form>
                <form asp-action="ChangePassword" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="mb-3">
                        <label asp-for="OtpCode" class="form-label"></label>
                        <input asp-for="OtpCode" class="form-control" placeholder="000000" maxlength="6" autocomplete="one-time-code" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="NewPassword" class="form-label"></label>
                        <input asp-for="NewPassword" class="form-control" placeholder="Min 12 chars, upper, lower, number, special" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="ConfirmNewPassword" class="form-label"></label>
                        <input asp-for="ConfirmNewPassword" class="form-control" placeholder="Re-enter new password" />
                    </div>
                    <div class="d-flex gap-2 flex-wrap">
                        <button type="submit" class="btn btn-primary">Change password</button>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
