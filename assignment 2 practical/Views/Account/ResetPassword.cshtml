@model AceJobAgency.Models.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset password";
}

<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card shadow-sm">
            <div class="card-body p-4">
                <h2 class="card-title h4 mb-3">Reset your password</h2>
                @if (TempData["ForgotPasswordSent"] != null)
                {
                    <p class="text-success small mb-3">@TempData["ForgotPasswordSent"]</p>
                }
                <p class="text-muted small mb-3">Enter the 6-digit code from your email and choose a new password.</p>
                <form asp-action="ResetPassword" method="post">
                    <input type="hidden" asp-for="Token" />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="mb-3">
                        <label asp-for="OtpCode" class="form-label"></label>
                        <input asp-for="OtpCode" class="form-control" placeholder="000000" maxlength="6" autocomplete="one-time-code" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="NewPassword" class="form-label"></label>
                        <input asp-for="NewPassword" class="form-control" placeholder="Min 12 chars, upper, lower, number, special" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="ConfirmNewPassword" class="form-label"></label>
                        <input asp-for="ConfirmNewPassword" class="form-control" placeholder="Re-enter new password" />
                    </div>
                    <div class="d-flex gap-2 flex-wrap">
                        <button type="submit" class="btn btn-primary">Reset password</button>
                        <a asp-action="Login" class="btn btn-outline-secondary">Back to Login</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
