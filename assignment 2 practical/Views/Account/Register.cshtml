@model AceJobAgency.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    var today = DateTime.Today;
    var maxDob = today.AddYears(-16);   // at least 16 years old
    var minDob = today.AddYears(-120);  // not older than 120 years
}

<h2>Membership Registration - Ace Job Agency</h2>
<form asp-action="Register" method="post" enctype="multipart/form-data" id="regForm">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="FirstName" class="form-label"></label>
            <input asp-for="FirstName" class="form-control" placeholder="e.g. John" />
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="LastName" class="form-label"></label>
            <input asp-for="LastName" class="form-control" placeholder="e.g. Tan" />
        </div>
    </div>
    <div class="mb-3">
        <label asp-for="Gender" class="form-label"></label>
        <select asp-for="Gender" class="form-select">
            <option value="">-- Select --</option>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
            <option value="Other">Other</option>
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="Nric" class="form-label"></label>
        <input asp-for="Nric" class="form-control" placeholder="e.g. S1234567A" maxlength="9" />
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" type="email" placeholder="e.g. john.tan@email.com" />
    </div>
    <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control" type="password" id="pwd" />
        <small class="form-text text-muted">Min 12 characters, upper, lower, number and special character.</small>
        <div id="pwdStrength" class="mt-1"></div>
    </div>
    <div class="mb-3">
        <label asp-for="ConfirmPassword" class="form-label"></label>
        <input asp-for="ConfirmPassword" class="form-control" type="password" />
    </div>
    <div class="mb-3">
        <label asp-for="DateOfBirth" class="form-label"></label>
        <input asp-for="DateOfBirth" class="form-control" type="date" min="@minDob.ToString("yyyy-MM-dd")" max="@maxDob.ToString("yyyy-MM-dd")" />
        <small class="form-text text-muted">You must be at least 16 years old.</small>
    </div>
    <div class="mb-3">
        <label asp-for="Resume" class="form-label"></label>
        <input asp-for="Resume" class="form-control" type="file" accept=".docx,.pdf,application/vnd.openxmlformats-officedocument.wordprocessingml.document,application/pdf" />
        <small class="form-text text-muted">Only .docx (Word document) and .pdf files are allowed. Maximum size: 5MB.</small>
    </div>
    <div class="mb-3">
        <label asp-for="WhoAmI" class="form-label"></label>
        <textarea asp-for="WhoAmI" class="form-control" rows="4" maxlength="2000" placeholder="Tell us about yourself, your experience and what you're looking for..."></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
    <a asp-action="Login" class="btn btn-link">Back to Login</a>
</form>

@section Scripts {
    <script>
        (function() {
            var pwd = document.getElementById('pwd');
            var strength = document.getElementById('pwdStrength');
            function check() {
                var v = (pwd && pwd.value) || '';
                var hasLower = /[a-z]/.test(v);
                var hasUpper = /[A-Z]/.test(v);
                var hasNum = /\d/.test(v);
                var hasSpecial = /[^\da-zA-Z]/.test(v);
                var len = v.length >= 12;
                var all = hasLower && hasUpper && hasNum && hasSpecial && len;
                var msg = [];
                if (!len) msg.push('At least 12 characters');
                if (!hasLower) msg.push('one lowercase');
                if (!hasUpper) msg.push('one uppercase');
                if (!hasNum) msg.push('one number');
                if (!hasSpecial) msg.push('one special character');
                strength.textContent = msg.length ? 'Missing: ' + msg.join(', ') : 'Strong password.';
                strength.className = 'mt-1 ' + (all ? 'text-success' : 'text-warning');
            }
            if (pwd) { pwd.addEventListener('input', check); pwd.addEventListener('change', check); }
        })();
    </script>
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
