@model AceJobAgency.Models.VerifyOtpViewModel
@{
    ViewData["Title"] = "Verify your email";
}

<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card shadow-sm">
            <div class="card-body p-4">
                <h2 class="card-title h4 mb-2">Two-Factor Verification</h2>
                <p class="text-muted small mb-3">We sent a 6-digit code to your email. Enter it below to complete sign-in.</p>
                @if (TempData["OtpSent"] != null)
                {
                    <div class="alert alert-success py-2 mb-3">A new code was sent to your email.</div>
                }
                <form asp-action="VerifyOtp" method="post">
                    <input type="hidden" asp-for="Token" />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="mb-3">
                        <label asp-for="OtpCode" class="form-label">Verification code</label>
                        <input asp-for="OtpCode" class="form-control form-control-lg text-center" placeholder="000000" maxlength="6" autocomplete="one-time-code" style="letter-spacing: 0.25em;" />
                    </div>
                    <div class="d-flex gap-2 flex-wrap">
                        <button type="submit" class="btn btn-primary">Verify and continue</button>
                        <a asp-action="Login" class="btn btn-outline-secondary">Back to Login</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
